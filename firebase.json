{
  "hosting": {
    "public": "dist/portfolio/browser",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/",
        "destination": "/en-US/",
        "type": 302
      }
    ],
    "rewrites": [
      { "source": "/en-US/**", "destination": "/en-US/index.html" },
      { "source": "/de/**", "destination": "/de/index.html" }
    ]
  }
}